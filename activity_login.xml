<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:background="#f8f4f0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:id="@+id/titleText"
            android:text="Vinheria do Vale"
            android:textColor="#733a11"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Desde 1987"
            android:textColor="#b9621b"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Aba de seleção -->
        <LinearLayout
            android:id="@+id/tabSelector"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnCliente"
                android:text="Cliente"
                android:textSize="18sp"
                android:layout_weight="1"
                android:backgroundTint="#b9621b"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnVendedor"
                android:text="Vendedor"
                android:textSize="18sp"
                android:layout_weight="1"
                android:backgroundTint="#e8c4a8"
                android:textColor="#733a11"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Login Cliente -->
        <LinearLayout
            android:id="@+id/layoutCliente"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/inputEmailCliente"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_border"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/inputSenhaCliente"
                android:hint="Senha"
                android:inputType="textPassword"
                android:background="@drawable/edittext_border"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnLoginCliente"
                android:text="Entrar"
                android:textSize="18sp"
                android:backgroundTint= "#b9621b"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Login Vendedor (invisível inicialmente) -->
        <LinearLayout
            android:id="@+id/layoutVendedor"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/inputEmailVendedor"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/inputSenhaVendedor"
                android:hint="Senha"
                android:inputType="textPassword"
                android:background="@drawable/edittext_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnLoginVendedor"
                android:text="Entrar"
                android:textSize="18sp"
                android:backgroundTint= "#b9621b"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
