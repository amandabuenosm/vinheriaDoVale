<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/terracotta_100"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Título -->
    <TextView
        android:id="@+id/titleCart"
        android:text="Shopping Cart"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/terracotta_800"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Lista de itens no carrinho -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:background="@color/terracotta_200"
        android:elevation="2dp">

        <Button
            android:id="@+id/btnAddProduct"
            android:text="Adicionar Produtos"
            android:backgroundTint="@color/terracotta_500"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:elevation="3dp"
            android:layout_marginBottom="8dp" />

        <!-- Item 1 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/terracotta_100"
            android:layout_marginBottom="8dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vinho Tinto Seco"
                android:textColor="@color/terracotta_900"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 89,90"
                android:textColor="@color/terracotta_700"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Item 2 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/terracotta_100"
            android:layout_marginBottom="8dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Espumante Brut Rosé"
                android:textColor="@color/terracotta_900"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 69,50"
                android:textColor="@color/terracotta_700"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Item 3 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/terracotta_100"
            android:elevation="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vinho Branco Chardonnay"
                android:textColor="@color/terracotta_900"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 74,00"
                android:textColor="@color/terracotta_700"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Total -->
    <TextView
        android:id="@+id/totalCart"
        android:text="Total: R$ 233,40"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/terracotta_800"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Botão Finalizar Compra -->
    <Button
        android:id="@+id/btnCheckout"
        android:text="Finalizar Compra"
        android:backgroundTint="@color/terracotta_500"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:elevation="3dp"
        android:layout_marginBottom="8dp" />
</LinearLayout>
