<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainvendedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8c4a8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- layout horizontal para o título + botão -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="#733a11">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Área do Vendedor"
                android:textColor="#f8e5d8"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonSair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sair"
                android:backgroundTint="#e8c4a8"
                android:textColor="#733a11"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- layout de botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:padding="16dp">

            <Button
                android:id="@+id/manutencaoClientes"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#733a11"
                android:textColor="#f8e5d8"
                android:textSize="18sp"
                android:text="Manutenção de Clientes"/>

            <Button
                android:id="@+id/dispEstoque"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#733a11"
                android:textColor="#f8e5d8"
                android:textSize="18sp"
                android:text="Disponibilidade de Estoque"/>

            <Button
                android:id="@+id/manutencaoPedidos"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#733a11"
                android:textColor="#f8e5d8"
                android:textSize="18sp"
                android:text="Manutenção de Pedidos"/>

            <Button
                android:id="@+id/metasComissoes"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#733a11"
                android:textColor="#f8e5d8"
                android:textSize="18sp"
                android:text="Metas e Comissões"/>

            <Button
                android:id="@+id/sugestoesDeRotas"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#733a11"
                android:textColor="#f8e5d8"
                android:textSize="18sp"
                android:text="Sugestões de Rotas"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>