<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8c4a8">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="#733a11">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detalhes do Representante"
                android:textColor="#f8e5d8"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonSair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#e8c4a8"
                android:textColor="#733a11"
                android:text="Sair"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView android:id="@+id/textDetalheNomeVendedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duarte Representações LTDA"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView android:id="@+id/textDetalheCpfCnpjVendedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.610.581/0001-62"
                android:textSize="18sp"/>

            <TextView android:id="@+id/textDetalheTelefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="48 3056-7229"
                android:textSize="18sp"/>

            <TextView android:id="@+id/textDetalheEmailVendedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="duarterepresentante@gmail.com"
                android:textSize="18sp"/>

            <TextView android:id="@+id/textAreaAtuacaoVendedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sul e Sudeste"
                android:textSize="18sp"/>

            <TextView android:id="@+id/textDetalheObservacoesVendedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Representante com 10 anos de carreira"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonEditar"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Editar"
                android:backgroundTint="#733a11"
                android:textColor="#f8e5d8"
                android:layout_margin="20dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonDeletar"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Excluir"
                android:backgroundTint="#733a11"
                android:textColor="#f8e5d8"
                android:layout_margin="20dp"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
