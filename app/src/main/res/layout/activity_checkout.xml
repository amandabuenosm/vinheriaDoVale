<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/terracotta_100"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:text="Checkout"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/terracotta_800"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Endereço -->
        <EditText
            android:id="@+id/editTextAddress"
            android:hint="Endereço de entrega"
            android:background="@color/terracotta_200"
            android:padding="12dp"
            android:textColor="@color/terracotta_900"
            android:textColorHint="@color/terracotta_600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Método de pagamento -->
        <EditText
            android:id="@+id/editTextPayment"
            android:hint="Método de pagamento (Cartão, Pix...)"
            android:background="@color/terracotta_200"
            android:padding="12dp"
            android:textColor="@color/terracotta_900"
            android:textColorHint="@color/terracotta_600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <!-- Botão -->
        <Button
            android:id="@+id/buttonFinishOrder"
            android:text="Finalizar Pedido"
            android:backgroundTint="@color/terracotta_500"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:elevation="3dp" />

    </LinearLayout>
</ScrollView>
