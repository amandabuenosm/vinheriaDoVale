<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/terracotta_100">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título da Vinheria -->
        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vini Eleganza"
            android:textSize="32sp"
            android:textColor="@color/terracotta_800"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabores que contam histórias"
            android:textSize="18sp"
            android:textColor="@color/terracotta_600"
            android:layout_marginBottom="24dp" />

        <!-- Seção de Destaques -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destaques"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/terracotta_800"
            android:layout_marginBottom="12dp" />

        <!-- Cards horizontais -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Card 1 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@color/terracotta_200"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/terracotta_200">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="365dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/salton_azir_antonio_salton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vinho Tinto Seco"
                        android:textColor="@color/terracotta_900"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ 89,90"
                        android:textColor="@color/terracotta_700"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Card 2 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@color/terracotta_200"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/terracotta_200">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="365dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/salton_brut_rose" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vinho Rosé Brut"
                        android:textColor="@color/terracotta_900"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ 89,90"
                        android:textColor="@color/terracotta_700"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Rodapé -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/terracotta_300"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="© 2025 Vini Eleganza. Todos os direitos reservados."
            android:textAlignment="center"
            android:textColor="@color/terracotta_600"
            android:textSize="12sp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
