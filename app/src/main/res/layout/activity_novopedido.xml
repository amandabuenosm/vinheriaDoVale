<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/terracotta_200">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título e botão -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="@color/terracotta_700">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Novo Pedido"
                android:textColor="@color/terracotta_100"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonSairPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/terracotta_200"
                android:textColor="@color/terracotta_700"
                android:text="Sair"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Campos do formulário -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editNomeCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Cliente"
                android:textSize="18sp"
                android:inputType="textPersonName"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/editItemPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item do Pedido"
                android:textSize="18sp"
                android:inputType="text"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/editQuantidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantidade"
                android:textSize="18sp"
                android:inputType="number"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/editDataEntrega"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data de Entrega (dd/MM/yyyy)"
                android:textSize="18sp"
                android:inputType="date"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/editDesconto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Desconto (R$)"
                android:textSize="18sp"
                android:inputType="numberDecimal"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/editAcrescimo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Acréscimo (R$)"
                android:textSize="18sp"
                android:inputType="numberDecimal"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/editObservacoesPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Observações"
                android:textSize="18sp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="12dp"/>

            <!-- Botão salvar -->
            <Button
                android:id="@+id/buttonSalvarPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar Pedido"
                android:backgroundTint="@color/terracotta_600"
                android:textColor="@color/terracotta_100"
                android:textSize="20sp"
                android:padding="12dp"
                android:elevation="3dp"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
