<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e8c4a8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- layout horizontal para o título + botão -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="#733a11">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detalhes do Cliente"
                android:textColor="#f8e5d8"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonSair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#e8c4a8"
                android:textColor="#733a11"
                android:text="Sair"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Informações do cliente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView android:id="@+id/textDetalheNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView android:id="@+id/textDetalheCpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF/CNPJ"
                android:textSize="18sp"/>

            <TextView android:id="@+id/textDetalheTelefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone"
                android:textSize="18sp"/>

            <TextView android:id="@+id/textDetalheEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="18sp"/>

            <TextView android:id="@+id/textDetalheEndereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço"
                android:textSize="18sp"/>

            <TextView android:id="@+id/textDetalheCidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade"
                android:textSize="18sp"/>

            <TextView android:id="@+id/textDetalheEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textSize="18sp"/>

            <TextView android:id="@+id/textDetalheCep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEP"
                android:textSize="18sp"/>

            <TextView android:id="@+id/textDetalheObservacoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observações"
                android:textSize="18sp"/>

        </LinearLayout>

        <!-- layout horizontal para o título + botão -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonEditar"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Editar"
                android:backgroundTint="#733a11"
                android:textColor="#f8e5d8"
                android:layout_margin="20dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonDeletar"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Excluir"
                android:backgroundTint="#733a11"
                android:textColor="#f8e5d8"
                android:layout_margin="20dp"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
